/* miniprogram/pages/timeTable/timeTable.wxss */
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  opacity: 0.5;
}
.top{
  display: flex;
  flex-direction: row;
  margin-left: 65rpx;
  background-color: #d9d1fd;
  color: #1545ca;
}
.top-text{
  width: 140rpx;
  height: 65rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}
.left{
  width: 65rpx;
  height: 100rpx;
  font-size: 11pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.flex-item {
  width: 140rpx;
  height: 100px;
}


.kcb-item {
  position: absolute;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  opacity:0.7
}

.blank-item{
  position: absolute;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  opacity: 0.2;
}

.subjecttext {
  margin-top:15px;
  font-size: 15px;
  color: #fff;
  line-height: 18px;
}

.placetext{
  font-size: 8px;
  color:#fff;
  line-height: 13px;
}